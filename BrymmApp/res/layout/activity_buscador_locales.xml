<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BuscadorLocalesActivity" >

    <ScrollView
        android:id="@+id/buscadorLocalesSVprincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/buscadorLocalesLlscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/buscadorLocalesTvTipoComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buscador_local_tipo_comida" />

            <Spinner
                android:id="@+id/buscadorLocalesSpTiposComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/buscadorLocalesEtLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buscador_local_nombre_local"
                android:ems="10" />

            <EditText
                android:id="@+id/buscadorLocalesEtPoblacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buscador_local_poblacion"
                android:ems="10" />

            <EditText
                android:id="@+id/buscadorLocalesEtCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buscador_local_calle"
                android:ems="10" />

            <EditText
                android:id="@+id/buscadorLocalesEtCodigoPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buscador_local_codigo_postal"
                android:ems="10" />

            <Button
                android:id="@+id/buscadorLocalesBtBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buscador_local_buscar" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
