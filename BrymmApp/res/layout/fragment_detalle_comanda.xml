<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalleComandaLlPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HacerPedidoFragment" >

    <LinearLayout
        android:id="@+id/detalleComandaLlBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/detalleComandaBtAccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/detalleComandaBtCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detalle_pedido_cancelar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detalleComandaLlPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detalleComandaTvIdComanda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detalle_pedido_id_pedido" />

        <TextView
            android:id="@+id/detalleComandaTvCamarero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detalle_pedido_usuario" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detalleComandaLlPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detalleComandaTvPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detalle_pedido_precio" />

        <TextView
            android:id="@+id/detalleComandaTvEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detalle_pedido_estado" />
    </LinearLayout>

    <TextView
        android:id="@+id/detalleComandaTvMesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detalle_pedido_direccion" />
    
    <TextView
        android:id="@+id/detalleComandaTvObservaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detalle_pedido_direccion" />

    <ListView
        android:id="@+id/detalleComandaLvArticulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    <ListView
        android:id="@+id/detalleComandaLvMenus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>