<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anadirHorarioLocalLlPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AnadirPlatoFragment" >

    <EditText
        android:id="@+id/anadirMenuEtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/anadir_menu_nombre" >
    </EditText>

    <LinearLayout
        android:id="@+id/anadirMenuLlTipoMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/anadirMenuSpTipoMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/anadirMenuEtPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/anadir_menu_precio"
            android:inputType="number" >
        </EditText>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/anadirMenuRgCarta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/anadirMenuLlBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/anadirMenuRbCarta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/menu_adapter_carta" />

            <RadioButton
                android:id="@+id/anadirMenuRbMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_adapter_menu" />
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/anadirMenuLlBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/anadirMenuBtAceptar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/anadir_menu_aceptar" />

        <Button
            android:id="@+id/anadirMenuBtCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/anadir_menu_cancelar" />
    </LinearLayout>

</LinearLayout>