<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/itemDetalleComandaArticuloTvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemDetalleComandaArticuloTvIngredientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/itemDetalleComandaArticuloLlPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/itemDetalleComandaArticuloTvPrecioUnidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/item_detalle_comanda_articulo_precio_unidad" />
        
         <TextView
            android:id="@+id/itemDetalleComandaArticuloTvCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/item_detalle_comanda_articulo_cantidad" />

        <TextView
            android:id="@+id/itemDetalleComandaArticuloTvPrecioTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/item_detalle_comanda_articulo_precio_total" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemDetalleComandaArticuloLlTerminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >   
        
        <TextView
            android:id="@+id/itemDetalleComandaArticuloTvEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
    </LinearLayout>

</LinearLayout>